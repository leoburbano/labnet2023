@model Practica3.EF.MVC.Models.ShipperViewModel

@{
    ViewBag.Title = "Crear";
}

<div class="container d-flex justify-content-between">
    <h2 class="mt-3 display-4 ">Crear</h2>
    <div class="d-flex align-items-center">

        <a class="btn btn-outline-secondary" href="/Shipper">Regresar</a>
    </div>
</div>
<div class="container">
    <div class="d-flex justify-content-center align-content-center">
        <form method="post" id="fagregar" onsubmit="fagregar(event)">
            <div class="form-group">
                <div class="form-group">

                    <label for="Name">Nombre</label>
                    <input class="form-control" id="Name" required name="Name" type="text" value="@Model.Name" />
                </div>
                <div class="form-group">

                    <label for="Phone">Telefono</label>
                    <input class="form-control" id="Phone" required name="Phone" type="text" value="@Model.Phone" />
                </div>
                <div class="form-group">

                    <button class="btn btn-outline-success" type="submit">Crear</button>
                </div>
            </div>
        </form>
    </div>

</div>

