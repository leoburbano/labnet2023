@model List<Practica3.EF.MVC.Models.ShipperViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between"> 
        <h2 class="mt-3 display-4 ">Shippers</h2>
        <div class="d-flex align-items-center">
            <p class="align-middle lead m-0">Crear &nbsp;</p>

            @Html.ActionLink(" ", "Crear", new { }, new { @class = "btn btn-outline-primary p-3 fa-solid fa-user-plus" })

        </div>
    </div>

    <table class="table table-striped mt-5">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Telefono</td>
                <td>Editar</td>
                <td>Eliminar</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Actualizar", new { id = item.Id }, new { @class = "btn btn-outline-success fa-sharp fa-solid fa-pen-to-square" })

                    </td>
                    <td>
                        @Html.ActionLink(" ", "Eliminar", new { id = item.Id }, new
                   {
                       onclick = "return confirm('¿Está seguro de que desea eliminar este registro?')",
                       @class = "btn btn-outline-danger fa-solid fa-trash-can"
                   })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="modalShipper" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Shipper.js"></script>